source 'https://rubygems.org'

# This project is built with Rails-API gem

gem 'rails', '4.2.4'
gem 'rails-api'



# backend

gem 'puma'
gem 'refile', require: 'refile/rails'
gem 'refile-s3'
gem 'active_model_serializers'
gem 'rack-cors', :require => 'rack/cors'

# database

gem 'pg'
gem 'kaminari'

# authentication

gem 'devise'
gem 'devise_token_auth'
gem 'omniauth'
gem 'hashie'



gem 'spring', :group => :development
