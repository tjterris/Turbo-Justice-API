source 'https://rubygems.org'

# This project is built with Rails-API gem

gem 'rails', '4.2.4'
gem 'rails-api'

# backend

gem 'puma'
gem 'refile'
gem 'refile-s3'
gem 'active_model_serializers'
gem 'rack-cors'
gem 'dotenv-rails'

# database

gem 'pg'
gem 'kaminari'

# authentication

gem 'devise_token_auth'
gem 'omniauth'
gem 'hashie'

group :test do
  gem 'shoulda-matchers', '~> 3.0' # Simplified testing on Rspec testing platform. https://github.com/thoughtbot/shoulda-matchers
end

group :development do
  gem 'spring'
  gem 'pry'
  gem 'pry-rails'
end
